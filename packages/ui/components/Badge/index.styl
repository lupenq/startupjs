_s = 1u
_dot = 1u
_m = 2u
_default = 2u
_l = 3u
_sHalf = (_s / 2)
_dotHalf = (_s / 2)
_mHalf = (_m / 2)
_defaultHalf = (_m / 2)
_lHalf = (_l / 2)
_sMinusHalf = (_s / 2) * -1
_dotMinusHalf = (_s / 2) * -1
_mMinusHalf = (_m / 2) * -1
_defaultMinusHalf = (_m / 2) * -1
_lMinusHalf = (_l / 2) * -1
_white = $UI.colors.white

.root
  position relative
  align-self flex-start

.badge
  position absolute
  justify-content center
  align-items center
  border 1px solid _white

  &.s
    min-width _s
    height _s
    border-radius _sHalf

    &.top
      top _sMinusHalf

    &.bottom
      bottom _sMinusHalf

  &.dot
    min-width _dot
    height _dot
    border-radius _dotHalf

    &.top
      top _dotMinusHalf

    &.bottom
      bottom _dotMinusHalf

  &.m
    min-width _m
    height _m
    border-radius _mHalf

    &.withLabel
      padding 0 0.5u

    &.top
      top _mMinusHalf

    &.bottom
      bottom _mMinusHalf

  &.default
    min-width _default
    height _default
    border-radius _defaultHalf

    &.withLabel
      padding 0 0.5u

    &.top
      top _defaultMinusHalf

    &.bottom
      bottom _defaultMinusHalf

  &.l
    min-width _l
    height _l
    border-radius _lHalf

    &.withLabel
      padding 0 1u

    &.top
      top _lMinusHalf

    &.bottom
      bottom _lMinusHalf

.label
  color _white

  &.m
    font-size 1u
    line-height 1.5u

  &.default
    font-size 1u
    line-height 1.5u

  &.l
    font-size 1.5u
    line-height 2u

.icon
  color _white

  &.withLabel
    margin-right 0.25u

// ----- JS EXPORTS
:export
  colors $UI.colors
